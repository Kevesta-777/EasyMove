# EasyMove Man and Van - Production Environment Configuration

# Application Settings
NODE_ENV=production
PORT=5000

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/easymove_production
PGHOST=your_production_db_host
PGPORT=5432
PGUSER=your_production_db_user
PGPASSWORD=your_production_db_password
PGDATABASE=easymove_production

# Google Maps API (Required for distance calculations)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Stripe Payment Processing (Live Keys)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
VITE_STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key

# PayPal Payment Processing (Live Credentials)
PAYPAL_CLIENT_ID=your_paypal_live_client_id
PAYPAL_CLIENT_SECRET=your_paypal_live_client_secret

# Session Management
SESSION_SECRET=your_secure_random_session_secret_min_32_chars

# Admin Portal Configuration
ADMIN_REGISTRATION_KEY=easymove2025

# Application URLs
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://api.your-domain.com

# Security Headers
CORS_ORIGIN=https://your-domain.com
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Optional - for notifications)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@your-domain.com

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# CDN Configuration (Optional)
CDN_URL=https://cdn.your-domain.com

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30